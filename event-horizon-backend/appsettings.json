{
  "ConnectionStrings": {
    "DefaultConnection": "Host={DB_HOST};Port={DB_PORT};Database={DB_NAME};Username={DB_USER};Password={DB_PASSWORD};",
    "RedisConnection": "{REDIS_CONNECTION}"
  },
  "Redis": {
    "Enabled": false,
    "InstanceName": "event-horizon-backend:",
    "DefaultExpirationInMinutes": 5
  },
  "MailSettings": {
    "Host": "{MAIL_HOST}",
    "Port": "{MAIL_PORT}",
    "EnableSsl": true,
    "UserName": "{MAIL_USER}",
    "Password": "{MAIL_PASSWORD}",
    "From": "{MAIL_USER}",
    "DisplayName": "E-Event Horizon",
    "AppUrl": "http://localhost:5291"
  },
  "JWT": {
    "ValidAudience": "http://localhost:5000",
    "ValidIssuer": "http://localhost:5000",
    "Secret": "{JWT_SECRET}",
    "TokenValidityInMinutes": "{JWT_VALIDITY_MINUTES}",
    "RefreshTokenValidityInDays": 7
  },
  "Global": {
    "Production": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
